<div class="row">
<% name ||="Crear"%>
<h3><%= name%> articulo</h3>

<%@article.errors.full_messages.each do |message|%>
    <div><%=message%></div>
<% end%>
<%= form_for(@article) do |f|%>
    <div class="col s6">
    <%= f.text_field :title, placeholder: "Titulo", required: "required"%>
    <%= f.text_area :body, placeholder: "Ingresa el contenido"%>
    <%= f.submit "Registrar"%>
    </div>
<% end %>
</div>
